<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.androidnc.ui.list.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.list.HomeFragment">
        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ln"
            android:layout_height="0dp"/>

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <Button
                android:onClick="@{()->viewModel.clickButtonHome()}"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_home_24"
                android:layout_height="match_parent"/>

            <Button
                android:onClick="@{()->viewModel.clickButtonMessage()}"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_message_24"
                android:layout_height="match_parent"/>
            <Button
                android:onClick="@{()->viewModel.clickButtonAdd()}"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_add_24"
                android:layout_height="match_parent"/>
            <Button
                android:onClick="@{()->viewModel.clickButtonNotify()}"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_notifications_24"
                android:layout_height="match_parent"/>
            <Button
                android:onClick="@{()->viewModel.clickButtonMenu()}"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_menu_24"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>